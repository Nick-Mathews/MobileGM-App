<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.EditPasswords"
    android:background="@drawable/pavel_neznanov_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/passwordListTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editUserLayout"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:gravity="center"
            android:text="@string/edit_username_password"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8sp"
            android:gravity="center"
            android:text="@string/username"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Placeholder"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/editUserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordListTitleLayout">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="18sp"
                android:labelFor="@+id/editUsernameText"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/editUsernameText"
                android:layout_width="wrap_content"
                android:layout_height="48sp"
                android:autofillHints="username"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="text"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_password"
                android:textSize="18sp"
                android:labelFor="@+id/currentPasswordText"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/currentPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="48sp"
                android:autofillHints="current password"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_password"
                android:textSize="18sp"
                android:labelFor="@+id/newPasswordText"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/newPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="48sp"
                android:autofillHints="solution"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editUserLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="100sp"
            android:layout_height="55sp"
            android:layout_marginHorizontal="12sp"
            android:id="@+id/saveUserButton"
            android:text="Save User"
            />

        <Button
            android:layout_width="105sp"
            android:layout_height="55sp"
            android:layout_marginHorizontal="12sp"
            android:id="@+id/cancelChangesButton"
            android:text="Cancel Changes"/>

        <Button
            android:layout_width="100sp"
            android:layout_height="55sp"
            android:layout_marginHorizontal="12sp"
            android:id="@+id/deleteUserButton"
            android:text="Delete User"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>