<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="320sp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="?android:attr/colorBackground"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_mobile_game_master"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center"
        android:background="?android:attr/colorBackground"
        android:fontFamily="serif"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_intro"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4sp"
        android:layout_marginStart="2sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_body1"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4sp"
        android:layout_marginStart="2sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_body2"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4sp"
        android:layout_marginStart="2sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_body3"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4sp"
        android:layout_marginStart="2sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_body4"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="4sp"
        android:layout_marginStart="2sp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">
    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>